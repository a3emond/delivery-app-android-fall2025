<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:id="@+id/mainMenuRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- LOGO -->
        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/logo_frame"
            android:clipToOutline="true">

            <ImageView
                android:id="@+id/splashLogo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/logo" />
        </FrameLayout>


        <!-- CARD CONTAINER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/card_background"
            android:elevation="6dp"
            android:clipToOutline="true"
            android:layout_margin="12dp">

            <Button
                android:id="@+id/btnManageRoutes"
                style="@style/AppButton.Primary"
                android:text="@string/manage_routes"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnAssignRoute"
                style="@style/AppButton.Primary"
                android:text="@string/assign_route"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnAddSubscription"
                style="@style/AppButton.Primary"
                android:text="@string/add_subscription"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnRemoveSubscription"
                style="@style/AppButton.Primary"
                android:text="@string/remove_subscription"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnAddDeliverer"
                style="@style/AppButton.Primary"
                android:text="@string/add_deliverer"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnRemoveDeliverer"
                style="@style/AppButton.Primary"
                android:text="@string/remove_deliverer"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnList"
                style="@style/AppButton.Primary"
                android:text="@string/list_items"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnQuit"
                style="@style/AppButton.Primary"
                android:text="@string/quit" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
